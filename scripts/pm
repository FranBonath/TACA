#!/usr/bin/env python

""" This is the entry point for PM.
"""
from cement.core import foundation, handler
from pm.core import BaseController
from pm.core.storage import StorageController

class PmApp(foundation.CementApp):
    class Meta:
        label = 'PM'
        base_controller = BaseController

# Create the main app
app = PmApp()

try:
    # Register handlers
    handler.register(StorageController)

    # Setup and run the application
    app.setup()
    app.run()
finally:
    # close the app
    app.close()